#
# To install Ruby 1.9.3 with openssl support on OSX using rbenv installed via homebrew:
#   CONFIGURE_OPTS=--with-openssl-dir=`brew --prefix openssl` rbenv install 1.9.3-p551
# Then, to get gems to install:
#   bundle config build.eventmachine --with-cppflags=-I`brew --prefix openssl`/include

# To install on OSX:
#   brew install icu4c
# then:
#   bundle config build.charlock_holmes --with-icu-dir=/usr/local/opt/icu4c

source 'https://rubygems.org'

gem 'sproutcore', '~>1.11.0'
gem 'copyright-header', '~>1.0.15'
